<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Name="TextBlockStyleMessegeViewModel" TargetType="Border" x:Key="TextBlockStyleMessegeViewModel">
        <Setter Property="TextBlock.HorizontalAlignment" Value="Center" />
        <Setter Property="TextBlock.FontSize" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />

    </Style>
    <Style x:Key="ErrorStyle" TargetType="Border"
           BasedOn="{StaticResource TextBlockStyleMessegeViewModel}">
        <Setter Property="TextBlock.Foreground" Value="White" />
        <Setter Property="Background" Value="Red" />
    </Style>

    <Style x:Key="StatusStyle" TargetType="Border"
           BasedOn="{StaticResource TextBlockStyleMessegeViewModel}">
        <Setter Property="Background" Value="Green" />
        <Setter Property="TextBlock.Foreground" Value="White" />
    </Style>

</ResourceDictionary>